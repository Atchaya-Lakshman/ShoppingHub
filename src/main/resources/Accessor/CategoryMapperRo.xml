<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.online.shopping.hub.category.dao.accessor.CategoryMapperRo">
    <!-- Define your SQL mappings here -->
    <select id="selectAll" resultType="com.online.shopping.hub.category.dao.entity.CategoryDto">
        SELECT
            *
        FROM
            category
        ORDER BY
            category_item_updated_at
    </select>

    <select id="selectById" resultType="com.online.shopping.hub.category.dao.entity.CategoryDto">
        SELECT
            *
        FROM
            category
        WHERE
            id = #{id}
    </select>

    <select id="selectByCategoryName" resultType="com.online.shopping.hub.category.dao.entity.CategoryDto">
        SELECT
            *
        FROM
            category
        WHERE
            category_name = #{categoryName}
    </select>
</mapper>